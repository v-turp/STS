<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_A200">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView2"
            android:scaleType="fitXY"
            android:src="@drawable/reo7"
            android:layout_toLeftOf="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!-- this is the layout on the right side of the image -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="198dp"
                android:layout_weight="0.93">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gold_mine"
                    android:id="@+id/tv_album_title"
                    android:textSize="40dp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="26dp"
                    android:layout_above="@+id/textView3"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reo_listings"
                    android:id="@+id/textView3"
                    android:textColor="@android:color/black"
                    android:layout_centerVertical="true"
                    android:layout_alignLeft="@+id/tv_album_title"
                    android:layout_alignStart="@+id/tv_album_title" />


                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foreground="@drawable/ic_play_arrow_black_18dp"
                    android:id="@+id/fab1"
                    android:layout_marginBottom="21dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/imageView"
                    android:layout_toStartOf="@+id/imageView" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_border_black_24dp"
                    android:id="@+id/imageView3"
                    android:layout_alignTop="@+id/imageView"
                    android:layout_alignLeft="@+id/fab1"
                    android:layout_alignStart="@+id/fab1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_more_vert_black_24dp"
                    android:id="@+id/imageView"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/orange_A100"
                    android:paddingTop="16dp"
                    android:paddingLeft="20dp"
                    android:text="@string/local_foreclosures"
                    android:textColor="@color/grey_800"
                    android:id="@+id/textView2"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>