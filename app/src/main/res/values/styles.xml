<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!--<style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>-->

    <!--<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" /> -->
    <!--BEGIN: sign-up dialog fragment -->
    <style name="signup_dialog_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/signup_dialog_header_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/blue_grey_900</item>
    </style>

    <style name="et_fname_signup_dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/signup_dialog_entries_alt_top_margin</item>
        <item name="android:layout_marginLeft">@dimen/signup_dialog_entries_left_margin</item>
        <item name="android:layout_marginRight">@dimen/signup_dialog_entries_right_margin</item>
        <item name="android:layout_marginBottom">@dimen/signup_dialog_entries_bottom_margin</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>

    <style name="et_lname_signup_dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/signup_dialog_entries_top_margin</item>
        <item name="android:layout_marginLeft">@dimen/signup_dialog_entries_left_margin</item>
        <item name="android:layout_marginRight">@dimen/signup_dialog_entries_right_margin</item>
        <item name="android:layout_marginBottom">@dimen/signup_dialog_entries_bottom_margin</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>

    <style name="et_email_signup_dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/signup_dialog_entries_top_margin</item>
        <item name="android:layout_marginLeft">@dimen/signup_dialog_entries_left_margin</item>
        <item name="android:layout_marginRight">@dimen/signup_dialog_entries_right_margin</item>
        <item name="android:layout_marginBottom">@dimen/signup_dialog_entries_bottom_margin</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>

    <style name="et_uname_signup_dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/signup_dialog_entries_top_margin</item>
        <item name="android:layout_marginLeft">@dimen/signup_dialog_entries_left_margin</item>
        <item name="android:layout_marginRight">@dimen/signup_dialog_entries_right_margin</item>
        <item name="android:layout_marginBottom">@dimen/signup_dialog_entries_bottom_margin</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>

    <style name="et_pword_signup_dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/signup_dialog_entries_top_margin</item>
        <item name="android:layout_marginLeft">@dimen/signup_dialog_entries_left_margin</item>
        <item name="android:layout_marginRight">@dimen/signup_dialog_entries_right_margin</item>
        <item name="android:layout_marginBottom">@dimen/signup_dialog_entries_alt_bottom_margin</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>
    <!--END: sign-up dialog fragment -->

    <!-- BEGIN: login dialog fragment -->
    <style name="style_login_dialog_header_text">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/deep_orange_900</item>
    </style>

    <style name="style_et_uname_login_dialog">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="style_et_pword_login_dialog">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <!-- END: login dialog fragment -->

    <!-- fingerprint dialog styles -->
    <style name="fingerprint_dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/dialog_left_padding</item>
        <item name="android:paddingRight">@dimen/dialog_right_padding</item>
        <item name="android:paddingTop">@dimen/dialog_top_padding</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="fingerprint_dialog_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/title_bottom_margin</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/fingerprint_dialog_header_text</item>
    </style>

    <style name="fingerprint_dialog_user_your_fingerprint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/subtitle_bottom_margin</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textSize">@dimen/fingerprint_dialog_text</item>
    </style>

    <style name="fingerprint_dialog_confirm_fingerprint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/subtitle_bottom_margin</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textSize">@dimen/fingerprint_dialog_text</item>
    </style>

    <style name="fingerprint_dialog_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/touch_sensor_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/fingerprint_icon_right_margin</item>
        <item name="android:padding">@dimen/fingerprint_image_padding</item>
        <item name="android:background">@drawable/fingerprint_background_circle</item>
    </style>

    <style name="fingerprint_dialog_touch_sensor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/touch_sensor_call_to_action_top_padding</item>
        <item name="android:paddingBottom">@dimen/touch_sensor_call_to_action_bottom_padding</item>
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textSize">@dimen/fingerprint_dialog_text</item>
    </style>

    <style name="fingerprint_dialog_button_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_container_height</item>
        <item name="android:paddingBottom">@dimen/button_container_bottom_padding</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="fingerprint_dialog_use_password_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:paddingLeft">@dimen/button_left_padding</item>
        <item name="android:paddingRight">@dimen/button_right_padding</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/teal_600</item>
        <item name="android:textSize">@dimen/fingerprint_dialog_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fingerprint_dialog_cancel_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:paddingLeft">@dimen/button_left_padding</item>
        <item name="android:paddingRight">@dimen/button_right_padding</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/teal_600</item>
        <item name="android:textSize">@dimen/fingerprint_dialog_text</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
