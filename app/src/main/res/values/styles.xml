    <!-- fingerprint dialog styles -->
    <style name="fingerprint_dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/dialog_left_padding</item>
        <item name="android:paddingRight">@dimen/dialog_right_padding</item>
        <item name="android:paddingTop">@dimen/dialog_top_padding</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="fingerprint_dialog_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/title_bottom_margin</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/fingerprint_dialog_header_text</item>
    </style>

    <style name="fingerprint_dialog_user_your_fingerprint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/subtitle_bottom_margin</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textSize">@dimen/fingerprint_dialog_text</item>
    </style>

    <style name="fingerprint_dialog_confirm_fingerprint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/subtitle_bottom_margin</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textSize">@dimen/fingerprint_dialog_text</item>
    </style>

    <style name="fingerprint_dialog_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/touch_sensor_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/fingerprint_icon_right_margin</item>
        <item name="android:padding">@dimen/fingerprint_image_padding</item>
        <!--<item name="android:background">@drawable/fingerprint_background_circle</item>-->
    </style>

    <style name="fingerprint_dialog_touch_sensor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/touch_sensor_call_to_action_top_padding</item>
        <item name="android:paddingBottom">@dimen/touch_sensor_call_to_action_bottom_padding</item>
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textSize">@dimen/fingerprint_dialog_text</item>
    </style>

    <style name="fingerprint_dialog_button_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_container_height</item>
        <item name="android:paddingBottom">@dimen/button_container_bottom_padding</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="fingerprint_dialog_use_password_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:paddingLeft">@dimen/button_left_padding</item>
        <item name="android:paddingRight">@dimen/button_right_padding</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/teal_600</item>
        <item name="android:textSize">@dimen/fingerprint_dialog_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fingerprint_dialog_cancel_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:paddingLeft">@dimen/button_left_padding</item>
        <item name="android:paddingRight">@dimen/button_right_padding</item>
        <item name="android:background">@android:color/transparent</item>
