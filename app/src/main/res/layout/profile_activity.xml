<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3">

    <include layout="@layout/toolbar_component" />

    <View style="@style/accent_bar"/>

    <!-- frame container-->
    <LinearLayout
        android:id="@+id/ll_profile_frame_container"
        style="@style/ll_profile_frame_container">

        <FrameLayout
            android:id="@+id/fl_profile_photo"
            style="@style/fl_profile_photo" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvProfile"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
</LinearLayout>

