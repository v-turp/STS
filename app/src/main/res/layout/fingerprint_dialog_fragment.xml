<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.score.sts.presentation.view.fragment.FingerprintDialogFragment"
    style="@style/fingerprint_dialog">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/text_fingerprint_dialog_header"
        android:text="@string/fingerprint_login"
        style="@style/fingerprint_dialog_header" />

    <TextView
        android:id="@+id/text_fingerprint_dialog_use_your_fingerprint"
        android:text="@string/fingerprint_dialog_option"
        style="@style/fingerprint_dialog_user_your_fingerprint" />

    <TextView
        android:id="@+id/text_fingerprint_dialog_confirm"
        android:text="@string/confirm_fingerprint"
        style="@style/fingerprint_dialog_confirm_fingerprint" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_fingerprint"
            android:src="@drawable/ic_fingerprint_white_24dp"
            style="@style/fingerprint_dialog_image" />

        <TextView
            android:id="@+id/text_touch_sensor"
            android:text="@string/touch_sensor"
            style="@style/fingerprint_dialog_touch_sensor" />
    </LinearLayout>

    <LinearLayout style="@style/fingerprint_dialog_button_layout">

        <Button
            android:id="@+id/btn_use_password"
            android:text="@string/use_password"
            style="@style/fingerprint_dialog_use_password_button" />

        <Button
            android:id="@+id/btn_cancel"
            android:text="@string/cancel"
            style="@style/fingerprint_dialog_cancel_button" />

    </LinearLayout>

</LinearLayout>
