<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.score.sts.presentation.view.activity.chat.ChatActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="218dp"
        android:layout_height="93dp"
        android:background="@drawable/bugatti"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-359dp"
        app:layout_constraintTop_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="-218dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView4" />

    <!-- Carousell -->

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@color/deep_orange_A700"
        app:layout_constraintRight_toLeftOf="@+id/linearLayout2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="parent"
        android:layout_marginEnd="4dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="4dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_chat_history"
        android:layout_width="375dp"
        android:layout_height="163dp"
        android:background="@color/green_700"
        app:layout_constraintRight_toRightOf="@+id/linearLayout2"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_chat_contacts"
        android:layout_width="218dp"
        android:layout_height="195dp"
        android:background="@color/blue_900"
        app:layout_constraintBottom_toBottomOf="@+id/rv_chat_history"
        app:layout_constraintRight_toRightOf="@+id/linearLayout" />

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="161dp"
        android:background="@android:color/holo_red_dark"
        android:id="@+id/linearLayout2"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="219dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="219dp">

        <android.support.v4.view.ViewPager
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="@color/amber_600"
        android:orientation="vertical"
        app:layout_constraintRight_toLeftOf="@+id/linearLayout2"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/rv_chat_contacts"
        android:layout_marginEnd="1dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="1dp"
        app:layout_constraintHorizontal_bias="0.0" />


</android.support.constraint.ConstraintLayout>
