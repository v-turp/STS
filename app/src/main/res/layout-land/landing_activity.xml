<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3">

    <include layout="@layout/toolbar_component"/>

    <View
        style="@style/accent_bar"/>

    <!-- frame containers-->
    <LinearLayout
        android:id="@+id/ll_frames_container"
        style="@style/ll_frames_container">

        <FrameLayout
            android:id="@+id/flLogoFrameContainer"
            style="@style/logo_frame_container"/>

        <LinearLayout
            android:id="@+id/ll_rows_container"
            style="@style/ll_rows_container">

            <LinearLayout
                android:id="@+id/ll_top"
                style="@style/ll_top">

                <include layout="@layout/partial_landing_activity_login"
                    style="@style/landing_activity_login_landscape"/>

                <include layout="@layout/partial_landing_activity_sign_up"
                    style="@style/landing_activity_sign_up"/>

                <include layout="@layout/partial_landing_activity_contact"
                    style="@style/landing_activity_contact"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bottom"
                style="@style/ll_bottom">

                <include
                    layout="@layout/partial_landing_activity_register_work"
                    style="@style/landing_activity_register_work_landscape"/>

                <ImageView
                    android:id="@+id/image_random1"
                    style="@style/landing_page_bottom_row_column2"/>

                <ImageView
                    android:id="@+id/image_random2"
                    style="@style/landing_page_bottom_row_column3"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

